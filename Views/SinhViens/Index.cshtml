@model IEnumerable<WebsiteQuanLySinhVien.Models.SinhVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Search" method="post">
    @* @Html.TextBox("id") *@
    @Html.TextBox("searchString")
    <br />
    <input type="submit" value="Search"/>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cccd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnhSinhVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnhTheSinhVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnhCccd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LopSinhHoatNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cccd)
            </td>
            <td>
                <img src="@item.HinhAnhSinhVien"/>
            </td>
            <td>
                <img src="@item.HinhAnhTheSinhVien"/>
            </td>
            <td>
                <img src="@item.HinhAnhCccd"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LopSinhHoatNavigation.MaLop)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSinhVien">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaSinhVien">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSinhVien">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
